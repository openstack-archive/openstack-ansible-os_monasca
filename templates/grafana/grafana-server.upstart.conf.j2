description "Grafana"
start on (filesystem and net-device-up)
stop on runlevel [06]

console log


respawn

#env http_proxy=proxy-url
#env https_proxy=proxy-url

env DAEMON_USER="grafana"
env DAEMON_PATH="/usr/sbin/grafana-server"
env DAEMON_OPTS="--config=/etc/grafana/grafana.ini web"
env DAEMON_LOG="/var/log/grafana/grafana.log"

setuid grafana
chdir /usr/share/grafana
nice 0

script
    exec "${DAEMON_PATH} ${DAEMON_OPTS}"
end script